---
import { getCollection } from 'astro:content';
import '../styles/global.css';
import TagCloud from '../components/TagCloud.astro';

const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Filter by tag if present in URL
const url = new URL(Astro.request.url);
const filterTag = url.searchParams.get('tag');
const filteredPosts = filterTag
  ? sortedPosts.filter(post => post.data.tags?.includes(filterTag))
  : sortedPosts;

// Map slugs to preview images
const previewImages = {
  'meaning-in-rhythm': '/pizzatownbuffet/images/rhythm-meaning.png',
  'rhythm-and-tides': '/pizzatownbuffet/images/rhythm-tides.png',
  'snake-salvation': '/pizzatownbuffet/images/snake-salvation.png',
  'phantom-pocket': '/pizzatownbuffet/images/phantom-pocket.png',
  'membrane-between-states': '/pizzatownbuffet/images/membrane-states.png',
  'subdivision-instant': '/pizzatownbuffet/images/subdivision-instant.png',
  'resonance-absence': '/pizzatownbuffet/images/resonance-absence.png',
  'weather-from-nowhere': '/pizzatownbuffet/images/weather-nowhere.png',
  'the-folding-sound': '/pizzatownbuffet/images/folding-sound.png',
  'between-skins': '/pizzatownbuffet/images/between-skins.png',
  'frequency-audit': '/pizzatownbuffet/images/frequency-audit.png',
  'the-backward-gesture': '/pizzatownbuffet/images/backward-gesture.png',
  'example': '/pizzatownbuffet/images/example.png',
};

const siteUrl = 'https://mjoslyn.github.io';
const ogImage = `${siteUrl}/pizzatownbuffet/images/og-default.png`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>pizzatownbuffet ~ transmissions from the vortex</title>

		<!-- SEO Meta Tags -->
		<meta name="description" content="patterns that shift, or don't" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={`${siteUrl}/pizzatownbuffet/`} />
		<meta property="og:title" content="pizzatownbuffet" />
		<meta property="og:description" content="patterns that shift, or don't" />
		<meta property="og:image" content={ogImage} />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={`${siteUrl}/pizzatownbuffet/`} />
		<meta name="twitter:title" content="pizzatownbuffet" />
		<meta name="twitter:description" content="patterns that shift, or don't" />
		<meta name="twitter:image" content={ogImage} />
		<style>
			.site-header {
				text-align: center;
				padding: var(--space-lg) var(--space-sm);
			}
			.site-title {
				font-size: 4rem;
				margin-bottom: var(--space-xs);
			}
			.site-tagline {
				color: var(--exhausted-gray);
				font-style: italic;
				font-size: 1.1rem;
				letter-spacing: 0.1em;
			}
			.posts-container {
				max-width: 900px;
				margin: 0 auto;
				padding: var(--space-md);
				display: flex;
				flex-direction: column;
				gap: var(--space-md);
			}
			.post-card {
				border: 1px solid var(--cosmic-purple);
				border-radius: 8px;
				overflow: hidden;
				background: rgba(107, 44, 145, 0.05);
				transition: all 0.3s ease;
			}
			.post-card:hover {
				background: rgba(107, 44, 145, 0.1);
				border-color: var(--burnt-sienna);
			}
			.post-link {
				display: flex;
				text-decoration: none;
				border: none;
			}
			.post-image {
				width: 280px;
				height: 180px;
				object-fit: cover;
				flex-shrink: 0;
			}
			.post-content {
				padding: var(--space-md);
				display: flex;
				flex-direction: column;
				justify-content: center;
			}
			.post-title {
				font-size: 1.8rem;
				margin-bottom: var(--space-xs);
				color: var(--cosmic-purple);
			}
			.post-tagline {
				color: var(--exhausted-gray);
				font-style: italic;
				font-size: 1rem;
				margin: 0;
			}
			.site-footer {
				text-align: center;
				padding: var(--space-lg) var(--space-sm);
				color: var(--exhausted-gray);
				font-size: 0.9rem;
			}
			.site-footer a {
				color: var(--cosmic-purple);
			}
			.filter-status {
				background: rgba(107, 44, 145, 0.1);
				border: 1px solid var(--cosmic-purple);
				border-radius: 8px;
				padding: var(--space-sm) var(--space-md);
				display: flex;
				align-items: center;
				gap: var(--space-xs);
				margin-bottom: var(--space-md);
				font-family: monospace;
			}
			.filter-label {
				color: var(--exhausted-gray);
				font-size: 0.9rem;
			}
			.filter-tag {
				color: var(--cosmic-purple);
				font-weight: bold;
				padding: 0.2rem 0.6rem;
				background: rgba(107, 44, 145, 0.15);
				border-radius: 12px;
			}
			.clear-filter {
				color: var(--burnt-sienna);
				text-decoration: none;
				margin-left: auto;
				padding: 0.2rem 0.6rem;
				border: 1px solid var(--burnt-sienna);
				border-radius: 12px;
				transition: all 0.3s ease;
			}
			.clear-filter:hover {
				background: var(--burnt-sienna);
				color: white;
			}
			.no-results {
				text-align: center;
				padding: var(--space-xl);
				color: var(--exhausted-gray);
			}
			.no-results p {
				font-size: 1.2rem;
				font-style: italic;
				margin-bottom: var(--space-md);
			}
			.no-results a {
				color: var(--cosmic-purple);
				text-decoration: none;
				border-bottom: 1px solid var(--cosmic-purple);
			}
			.no-results a:hover {
				color: var(--burnt-sienna);
				border-bottom-color: var(--burnt-sienna);
			}
			@media (max-width: 768px) {
				.post-link {
					flex-direction: column;
				}
				.post-image {
					width: 100%;
					height: 220px;
				}
				.site-title {
					font-size: 2.5rem;
				}
			}
		</style>
	</head>
	<body>
		<header class="site-header">
			<h1 class="site-title">pizzatownbuffet</h1>
			<p class="site-tagline">patterns that shift, or don't</p>
			<TagCloud />
		</header>

		<div class="posts-container">
			{filterTag && (
				<div class="filter-status">
					<span class="filter-label">filtering by:</span>
					<span class="filter-tag">{filterTag}</span>
					<a href="/pizzatownbuffet/" class="clear-filter">clear</a>
				</div>
			)}
			{filteredPosts.map(post => (
				<article class="post-card">
					<a href={`/pizzatownbuffet/posts/${post.slug}`} class="post-link">
						<img src={previewImages[post.slug]} alt="" class="post-image" />
						<div class="post-content">
							<h2 class="post-title">{post.data.title}</h2>
							<p class="post-tagline">{post.data.tagline || 'something about patterns, maybe'}</p>
						</div>
					</a>
				</article>
			))}
			{filteredPosts.length === 0 && (
				<div class="no-results">
					<p>the void yields nothing for this incantation</p>
					<a href="/pizzatownbuffet/">return to all transmissions</a>
				</div>
			)}
		</div>

		<footer class="site-footer">
			<a href="https://github.com/mjoslyn/pizzatownbuffet" target="_blank" rel="noopener noreferrer">source</a>
		</footer>
	</body>
</html>
